{
    "workbench.colorCustomizations": {},
    "liveServer.settings.root": "./www",
    "liveServer.settings.fullReload": true,

    "files.exclude": {
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.html" : true
